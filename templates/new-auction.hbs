<h2>Add a new Auction</h2>
<form>
  <div class="form-group">
    <label for="name">Name</label>
    {{input value=name id="name" class="form-control"}}
  </div>
  <div class="form-group">
    <label for="date">Date</label>
    {{input value=date id="date" class="form-control"}}
  </div>
  <div class="form-group">
    <label for="location">Location</label>
    {{input value=location id="location" class="form-control"}}
  </div>

  <button class="btn btn-primary" {{action 'save'}}>Add Lot</button>
</form>
