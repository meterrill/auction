<h2>Add a new Auction</h2>
<form>
  <div class="form-group">
    <label for="newName">Name</label>
    {{input value=newName id="newName" class="form-control"}}
  </div>
  <div class="form-group">
    <label for="newDate">Date</label>
    {{input value=newDate id="newDate" class="form-control"}}
  </div>
  <div class="form-group">
    <label for="newLocation">Location</label>
    {{input value=newLocation id="newLocation" class="form-control"}}
  </div>

  <button class="btn btn-primary" {{action 'save'}}>Add Auction</button>
</form>
